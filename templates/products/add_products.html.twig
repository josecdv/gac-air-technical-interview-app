{% extends 'menu.html.twig' %}

{% block title %}Añadir Productos - Stockify{% endblock %}

{% block body %}
    {% if errors %}
        <div class="alert alert-danger alert-dismissible fade show">
            <ul>
                {% for error in errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}
    {% for mensaje in app.flashes('mensaje') %}
        <div class="alert alert-{{app.flashes('css')[0]}} alert-dismissible fade show" role="alert">
            {{ mensaje }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                <div>
                    <h4 class="mb-3">Nuevo producto</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <form method="POST" action="{{url('add_products')}}">
                <div class="row">
                    <div class="col-md-6">    
                        <!-- CON ERROR 
                        <div class="form-group has-error has-danger">-->                 
                        <div class="form-group">
                            <label>Nombre *</label>
                            {{form_widget(form.name, {"required": false, "attr":{"placeholder": "", "class": "form-control", "type": "text"}})}}
                            <!-- CON ERROR  
                            <div class="help-block with-errors">
                                <ul class="list-unstyled">
                                    <li>Rellene este campo.</li>
                                </ul>
                            </div>-->
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Categoría *</label>
                            {{form_widget(form.category, {"required": false, "attr":{"class": "form-control"}})}}
                        </div>
                    </div>
                    <div class="col-md-12 mt-5 text-center">
                        <input type="hidden" name="token" value="{{csrf_token('generico')}}" />
                        <button type="submit" class="btn btn-primary mr-2">Añadir producto</button>
                    </div>
                </div>
            </form>
        </div> 
    </div>

    <script>
        const elementosLi = document.querySelectorAll('li'); // Seleccionar todos los elementos li
            elementosLi.forEach(elementoLi => {
            elementoLi.classList.remove('active'); // Eliminar la clase "active"
        });

        const elementoLiObjetivo = document.querySelector('li.menu-products'); // Seleccionar el elemento li objetivo
        elementoLiObjetivo.classList.add('active');
    </script>
{% endblock %}