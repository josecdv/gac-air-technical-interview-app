{% extends 'base.html.twig' %}

{% block title %}Edit Users{% endblock %}

{% block body %}
    <div class="wrapper">
            <section class="login-content">
                <div class="container">
                    <div class="row align-items-center justify-content-center height-self-center">
                        <div class="col-lg-8">
                            <div class="card auth-card">
                                <div class="card-body p-0">
                                    <div class="d-flex align-items-center auth-content">
                                        <div class="col-lg-7 align-self-center">
                                            <div class="p-3">
                                                <h2 class="mb-2">Editar Users</h2>
                                                <div class="mb-4"></div>
                                                {{ form_start(form) }}
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="floating-label form-group">
                                                                 {{ form_widget(form.username, {'attr': {'class': 'floating-input form-control','required': 'required'}}) }}
                                                                <label>Usuario</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-12">
                                                            <div class="floating-label form-group">
                                                                {{ form_widget(form.password, {'attr': {'class': 'floating-input form-control','required': 'required'}}) }}
                                                                <label>Contraseña</label>
                                                            </div>
                                                        </div>   
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Update</button>
                                                    <p class="mt-3">
                                                        ¿Ya tienes una cuenta? <a href="{{ path('app_login') }}" class="text-primary">Accede a Stockify</a>
                                                    </p>
                                                {{ form_end(form) }}
                                            </div>
                                        </div>
                                        <div class="col-lg-5 content-right">
                                            <img src="{{asset('assets/images/login/01.png')}}" class="img-fluid image-right" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
{% endblock %}
