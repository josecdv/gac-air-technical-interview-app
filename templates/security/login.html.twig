{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="wrapper">
			<section class="login-content">
				<div class="container">
					<div class="row align-items-center justify-content-center height-self-center">
						<div class="col-lg-8">
							<div class="card auth-card">
								<div class="card-body p-0">
									<div class="d-flex align-items-center auth-content">
										<div class="col-lg-7 align-self-center">
											<div class="p-3">
												<h2 class="mb-2">Acceder</h2>
												<form method="post">
													<div class="row">
														<div class="col-12">
															<div class="floating-label form-group">
																<label>Usuario</label>
																<input type="text" id="users_username" name="username" required="required" class="floating-input form-control" />
                                                                
															</div>
														</div>
														<div class="col-lg-12">
															<div class="floating-label form-group">
																<label for="inputPassword">Password</label>
																<input type="password" name="password" id="inputPassword" class="floating-input form-control" required="required">
															</div>
														</div>
													</div>	
													<button type="submit" class="btn btn-primary">Acceder</button>
													<p class="mt-3">
														Crear una cuenta <a href="{{ path('users_new') }}" class="text-primary">Registrarse</a>
													</p>												
												</form>	
											</div>	
										</div>
										<div class="col-lg-5 content-right">
											<img src="{{asset('assets/images/login/01.png')}}" class="img-fluid image-right" alt="">
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>
{% endblock %}
